{
  "name": "mqtt-server",
  "version": "1.0.0",
  "description": "MQTT-based UCI Configuration Management System",
  "main": "src/server.js",
  "scripts": {
    "setup": "node setup.js",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "typecheck": "echo 'No TypeScript configured'",
    "security-check": "npm audit --audit-level=moderate",
    "build": "echo 'No build step required for Node.js app'",
    "clean": "rm -rf logs/* && rm -rf uci_backup/*",
    "docker:build": "docker build -t mqtt-server .",
    "docker:run": "docker run -p 1883:1883 -p 3001:3001 -p 8883:8883 mqtt-server",
    "docker:compose": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "health-check": "curl -f http://localhost:3001/health || exit 1"
  },
  "dependencies": {
    "aedes": "^0.50.0",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "joi": "^17.9.2",
    "mqtt": "^5.0.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5"
  },
  "keywords": [
    "mqtt",
    "uci",
    "configuration",
    "iot"
  ],
  "author": "Haorong",
  "license": "MIT"
}
